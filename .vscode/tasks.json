{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build CppLMS project",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/AdminSecurity/adminSecurity.cpp",
                "${workspaceFolder}/src/MemberManagement/memberManagement.cpp",
                "${workspaceFolder}/src/BookManagement/bookManagement.cpp",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/src/main.exe"
            ],
            "options": {
                // Set current working directory for the build if needed, but g++ handles paths well.
                // "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the CppLMS project using g++ with C++20 standard."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}